        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        },
        "stacking": {
          "mode": "normal"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (severity) (increase(anomaly_count_total[1m]))",
          "legendFormat": "{{severity}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Top 5 Devices by Anomalies (5m)",
      "id": 6,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 6
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(5, sum by (device_id)(increase(anomaly_count_total[5m])))",
          "legendFormat": "{{device_id}}"
        }
      ]
    },
    {
      "type": "timeseries",
